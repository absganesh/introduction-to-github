<body>

<div class="container">
    <h2>¿Querés ser mi San Valentín??</h2>
    <div class="buttons">
        <button class="yes" onclick="decirSi()">Sí</button>
        <button class="no" onclick="moverNo()" id="noBtn">No</button>
    </div>
    <p id="mensaje" style="font-size: 20px; margin-top: 20px; color: red;"></p>
</div>

<script>
    function decirSi() {
        document.getElementById("mensaje").innerText = "Sabía que ibas a decir que sí, TE AMOOO ❤️";
    }

    function moverNo() {
        let btnNo = document.getElementById("noBtn");
        let maxWidth = window.innerWidth - btnNo.clientWidth - 40;
        let maxHeight = window.innerHeight - btnNo.clientHeight - 40;
        
        let randomX = Math.floor(Math.random() * maxWidth);
        let randomY = Math.floor(Math.random() * maxHeight);
        
        btnNo.style.left = randomX + "px";
        btnNo.style.top = randomY + "px";
    }
</script>

</body>
