<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VideoHub - YouTube Clone</title>
    <style>
        /* Base styles from previous template */
        body {
            background-color: #0f0f0f;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 80px auto;
            padding: 20px;
            display: grid;
            grid-template-columns: 3fr 1fr;
            gap: 2rem;
        }

        /* Video Player */
        .video-player {
            background-color: #000;
            border-radius: 12px;
            overflow: hidden;
        }

        #main-video {
            width: 100%;
            height: 600px;
        }

        .player-controls {
            padding: 1rem;
            background-color: #212121;
        }

        /* Recommendations */
        .recommendations {
            background-color: #212121;
            padding: 1rem;
            border-radius: 12px;
        }

        .recommended-video {
            display: flex;
            margin-bottom: 1rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
        }

        .recommended-video:hover {
            background-color: #303030;
        }

        .rec-thumbnail {
            width: 160px;
            height: 90px;
            border-radius: 4px;
            margin-right: 1rem;
        }

        /* Comments Section */
        .comments-section {
            grid-column: 1 / -1;
            margin-top: 2rem;
        }

        .comment {
            display: flex;
            margin-bottom: 1.5rem;
        }

        .comment-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #303030;
            margin-right: 1rem;
        }

        .comment-content {
            flex-grow: 1;
        }

        .comment-input {
            width: 100%;
            padding: 1rem;
            background-color: #212121;
            border: none;
            border-radius: 20px;
            color: white;
            margin-bottom: 1rem;
        }

        .comment-button {
            background-color: #3da6ff;
            color: white;
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Header (from previous example) -->

    <div class="container">
        <!-- Main Video Player -->
        <div class="video-player">
            <video id="main-video" controls>
                <source src="sample-video.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>

        <!-- Recommendations Sidebar -->
        <div class="recommendations">
            <h3>Recommended Videos</h3>
            <div class="recommended-video" onclick="changeVideo('video1.mp4')">
                <img src="thumbnail1.jpg" class="rec-thumbnail">
                <div>
                    <div class="video-title">Recommended Video 1</div>
                    <div class="video-meta">Channel Name ‚Ä¢ 50K views</div>
                </div>
            </div>
            <!-- Add more recommended videos -->
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
            <h3>Comments (42)</h3>
            <input type="text" class="comment-input" placeholder="Add a comment...">
            <button class="comment-button" onclick="postComment()">Comment</button>
            
            <div class="comments-list">
                <div class="comment">
                    <div class="comment-avatar"></div>
                    <div class="comment-content">
                        <div class="comment-author">User123 <span class="comment-time">2 hours ago</span></div>
                        <div class="comment-text">Great video! Really enjoyed the content.</div>
                        <div class="comment-actions">
                            <button class="like-button">üëç 24</button>
                            <button class="dislike-button">üëé 2</button>
                        </div>
                    </div>
                </div>
                <!-- More comments -->
            </div>
        </div>
    </div>

    <script>
        // Video Player Logic
        const mainVideo = document.getElementById('main-video');
        
        function changeVideo(videoSrc) {
            mainVideo.src = videoSrc;
            mainVideo.play();
        }

        // Comments System
        function postComment() {
            const commentInput = document.querySelector('.comment-input');
            const commentText = commentInput.value.trim();
            
            if (commentText) {
                const commentsList = document.querySelector('.comments-list');
                const newComment = document.createElement('div');
                newComment.className = 'comment';
                newComment.innerHTML = `
                    <div class="comment-avatar"></div>
                    <div class="comment-content">
                        <div class="comment-author">User${Math.floor(Math.random()*1000)} <span class="comment-time">Just now</span></div>
                        <div class="comment-text">${commentText}</div>
                        <div class="comment-actions">
                            <button class="like-button">üëç 0</button>
                            <button class="dislike-button">üëé 0</button>
                        </div>
                    </div>
                `;
                commentsList.prepend(newComment);
                commentInput.value = '';
            }
        }

        // Recommendation System (Simple version)
        const recommendations = [
            {
                title: "Recommended Video 2",
                channel: "Tech Reviews",
                views: "120K views",
                thumbnail: "thumbnail2.jpg",
                videoSrc: "video2.mp4"
            },
            // Add more recommendations
        ];

        // Render recommendations
        function renderRecommendations() {
            const recContainer = document.querySelector('.recommendations');
            recommendations.forEach(video => {
                const element = document.createElement('div');
                element.className = 'recommended-video';
                element.innerHTML = `
                    <img src="${video.thumbnail}" class="rec-thumbnail">
                    <div>
                        <div class="video-title">${video.title}</div>
                        <div class="video-meta">${video.channel} ‚Ä¢ ${video.views}</div>
                    </div>
                `;
                element.onclick = () => changeVideo(video.videoSrc);
                recContainer.appendChild(element);
            });
        }
        renderRecommendations();
    </script>
</body>
