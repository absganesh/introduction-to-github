        document.getElementById("scamForm").addEventListener("submit", function(event) {
            event.preventDefault(); // 阻止默认提交行为
            // 获取输入的内容
            var name = document.getElementById("name").value;
            var phone = document.getElementById("phone").value;

            // 弹出提示框显示提交成功
